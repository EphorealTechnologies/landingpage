---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Strategic Consult - Ephoreal Technologies',
  description: 'Learn how we approach strategic consulting with our first principles methodology.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Strategic Consult"
    image={{
      src: '~/assets/images/ConsultProcess.png',
      alt: 'Strategic Planning',
    }}
  >
    <Fragment slot="title">
      Strategic Consult with <br />
      <span class="text-accent dark:text-white highlight">First Principles</span>
    </Fragment>

    <Fragment slot="subtitle">
      We approach every consulting engagement with a systematic methodology that ensures we identify the root causes of your challenges and deliver actionable solutions that drive real business value.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="How we do strategic consult"
    title="First principles!"
    items={[
      {
        title: 'Domain understanding',
        description:
          'We are domain-agnostic and take understanding your existing process seriously. After gaining clarity, we explore bottlenecks based on business priorities to identify the sources of your pain points, problems, and inefficiencies.',
      },
      {
        title: 'Prioritize',
        description:
          'We prioritize business problems to solve based on alignment with business value in terms of time savings or increased revenue generation.',
      },
      {
        title: 'Design',
        description:
          'We create the solution design and high-level approach based on business priorities.',
      },
      {
        title: 'MVP',
        description:
          'We build a quick MVP within a few weeks and release it for feedback to enable further iterations.',
      },
    ]}

    image={{
      src: '/Meeting.json',
      alt: 'Strategic Meeting Animation',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Call to Action Widget **************** -->

  <CallToAction
    title="Ready to transform your business?"
    subtitle="Let's discuss how our strategic consulting approach can help you achieve your goals."
    callToAction={{
      text: 'Get Started',
      href: '/contact',
      icon: 'tabler:arrow-right',
    }}
  />
</Layout> 