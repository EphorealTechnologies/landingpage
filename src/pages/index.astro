---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';
import DataScienceFlow from "~/assets/images/DataScienceFlow.svg";

const metadata = {
  title: 'Ephoreal Technologies â€” your data strategy partner',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    <!actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}>
    image={{ src: '~/assets/images/dataAnalysis.jpg', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
    Empowering enterprises with 
    <br>
    <span class="text-accent dark:text-white highlight"> 
    data-driven 
    </span> <br>
    decision making 
    <br>
    <br>
    </Fragment>
    
    
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Enhance your intuition using data.</span> 
        <br> Transform your data into information and information into business insights,
        <br> -insights to actionable growth strategies.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="What we do?"
    title="End-to-End Enterprise Data Solutions"
    items={[
      {
        title: 'Data Engineering',
        description:
          'We design and implement data pipelines that process and store data, enabling your organization to make informed decisions.',
      },
      {
        title: 'Machine Learning',
        description:
          'With cutting-edge AI and machine learning, we help businesses harness their data to predict trends, automate tasks, and generate insights.',
      },
      {
        title: 'MLOps',
        description:
          'We streamline the lifecycle of machine learning models, ensuring smooth deployment, management, and scaling with our MLOps solutions.',
      },
    ]}
    image={{
      src: '~/assets/images/DataScienceFlow.svg',
      alt: 'Enterprise Data Blueprint',
    }}
  >
    <Fragment slot="content">We provide data engineering, machine learning, and MLOps services that transform how businesses operate, innovate, and scale.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isAfterContent
    tagline="How we do strategic consult"
    title="First principles!"
    items={[
      {
        title: 'Domain understanding',
        description:
          'We are domain agnostic, exploring with an openmind to identity the source of your pain points, problem and inefficiencies. Gather requirements from domain experts and align with business prioritise',
      },
      {
        title: 'Solution',
        description:
          'We do a literature survey and design technical solution.',
      },
      {
        title: 'Demo',
