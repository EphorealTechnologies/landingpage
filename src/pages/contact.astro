---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata} >
  <!-- HeroText Widget ******************* -->
  <HeroText tagline="Contact" title="Let's Connect!" />
  
  <!-- Container for the form with percentage-based padding -->
  <div style="padding-left: 30%; padding-right: 30%;" id="hubspot-form-container">
    <script is:inline data-astro-rerun charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
    <script is:inline data-astro-rerun>
      document.addEventListener('astro:page-load', () => {
      hbspt.forms.create({
        region: "na1",
        portalId: "47705130",
        formId: "09b2019a-aa55-41e4-9fe4-85eb2a955c78"
      });
    });
    </script>
  </div>
</Layout>